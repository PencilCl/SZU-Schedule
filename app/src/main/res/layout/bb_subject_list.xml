<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:textAlignment="center"
              android:orientation="vertical">

    <RelativeLayout
            style="@style/MyTitleBar"
            android:background="@color/honeydew">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/status_bar_height">
            <ImageButton
                    android:id="@+id/sub_back"
                    style="@style/MyTitleBar.Back" app:srcCompat="@drawable/ic_back"/>
            <TextView
                    style="@style/MyTitleBar.Title"
                    android:text="@string/bb_subject_title" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
            android:text="离散数学"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/subject1" style="@style/Widget.AppCompat.Button.Borderless"
            android:height="65dp" android:textSize="18sp" android:layout_marginBottom="5dp"/>
    <Button
            android:text="软件工程"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/subject2"
            style="@style/Widget.AppCompat.Button.Borderless" android:height="65dp" android:textSize="18sp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:text="计算机系统（2）"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/subject3"
            style="@style/Widget.AppCompat.Button.Borderless" android:height="65dp" android:textSize="18sp"
            android:layout_marginBottom="5dp"/>
    <Button
            android:text="计算机网络"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/subject4"
            style="@style/Widget.AppCompat.Button.Borderless" android:height="65dp" android:textSize="18sp"
            android:layout_marginBottom="5dp"/>
</LinearLayout>
