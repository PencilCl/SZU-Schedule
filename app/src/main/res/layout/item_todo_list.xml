<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_height="wrap_content"
        android:background="@android:color/background_light" android:padding="10dp">
    <RelativeLayout
            android:layout_width="50dp" android:layout_height="50dp">

        <TextView
                android:id="@+id/timeBegin"
                android:text="8:30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp" android:gravity="center"/>
        <TextView
                android:id="@+id/timeEnd"
                android:text="10:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeBegin"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp" android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="1px"
            android:background="@color/dividerColor" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:layout_height="40dp">
    </LinearLayout>
    <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="match_parent" android:layout_marginStart="10dp">

        <TextView
                android:id="@+id/itemName"
                android:text="事项名称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/black" android:textSize="16sp"
                android:layout_marginTop="5dp"/>
        <TextView
                android:id="@+id/itemNote"
                android:text="事项备注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:layout_marginTop="3dp"/>
        <ImageView
                android:id="@+id/alertImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_alert" android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" android:padding="10dp"/>
    </RelativeLayout>
</LinearLayout>