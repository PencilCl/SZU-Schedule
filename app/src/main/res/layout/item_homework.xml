<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

    <TextView
            android:id="@+id/name"
            android:text="实验一 并发程序设计"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="18sp" android:textColor="@android:color/black"/>

    <TextView
            android:id="@+id/courseName"
            android:layout_below="@+id/name"
            android:text="软件工程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@android:color/black"
            android:layout_marginTop="5dp"/>

    <TextView
            android:id="@+id/info"
            android:text="截止日期: 2017.06.06"
            android:layout_below="@+id/courseName"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/info"
            android:layout_marginTop="10dp"
            android:background="@color/dividerColor"/>
</RelativeLayout>